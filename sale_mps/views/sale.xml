<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_sale_order_mps_inherit" model="ir.ui.view">
			<field name="name">sale.order.mps.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='other_information']" position="after">
					<page string="Paquetes">
						<group>
							<field name="warehouse_id" invisible="1"/>
							<field name="manual_package_ids">
								<tree create="false" delete="false" string="Paquetes disponibles" editable="top">
									<field name="selected" widget="boolean_toggle"/>
									<field name="sale_id" readonly="1" force_save="1"/>
									<field name="package_id" readonly="1" force_save="1"/>
									<field name="product_id" readonly="1" force_save="1"/>
								</tree>
							</field>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>