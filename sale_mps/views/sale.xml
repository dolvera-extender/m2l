<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_sale_order_mps_inherit" model="ir.ui.view">
			<field name="name">sale.order.mps.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='other_information']" position="after">
					<page string="Paquetes">
						<group>
							<field name="warehouse_id" invisible="1"/>
							<field name="mps_product_domain" widget="many2many_tags" invisible="0"/>
							<field name="mps_product_id"
								   attrs="{'invisible': [('state', '!=', 'draft')]}"
								   options="{'no_create': True}"
								   domain="[('id', 'in', mps_product_domain)]"/>
						</group>
							<div class="row">
								<div class="col-6">
									<h4>Paquetes disponibles del producto</h4>
									<field name="manual_package_available_ids">
										<tree create="false" delete="false"
											  default_order="package_id asc"
											  string="Paquetes disponibles">
											<field name="sale_id_av" readonly="1" force_save="1" invisible="1"/>
											<field name="package_id" readonly="1" force_save="1"/>
											<field name="product_id" readonly="1" force_save="1"/>
											<field name="product_qty"/>
											<button name="mps_select" string="AÃ±adir" type="object" attrs="{'invisible': [('parent.state', '!=', 'draft')]}"/>
										</tree>
									</field>
								</div>
								<div class="col-6">
									<h4>Paquetes incluidos</h4>
									<field name="manual_package_selected_ids">
										<tree create="false" delete="false"
											  default_order="package_id asc"
											  string="Paquetes disponibles">
											<field name="sale_id_se" readonly="1" force_save="1" invisible="1"/>
											<field name="package_id" readonly="1" force_save="1"/>
											<field name="product_id" readonly="1" force_save="1"/>
											<field name="product_qty"/>
											<button name="mps_unselect" string="Quitar" type="object" attrs="{'invisible': [('parent.state', '!=', 'draft')]}"/>
										</tree>
									</field>
								</div>
							</div>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>