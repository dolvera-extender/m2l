<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="ai_packages_wizard_form_view">
        <field name="name">wizard_get_location_form_view</field>
        <field name="model">ia.packages.audit.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="package_name_read" class="pnrf"/>
                        </group>
                        <group>
                            <field name="location_id" class="lid" readonly="1" options="{'no_open': True, 'no_create': True}"/>                    
                        </group>
                    </group>
                    
                    <group>
                        <notebook>
                            <page string="Paquetes fuera de ubicaciÃ³n" name="package_wrong_location">
                                <field name="package_wrong_location_line_ids">
                                    <tree decoration-warning="to_move" editable="top" duplicate="false" create="false" delete="false">
                                        <field name="package_id" readonly="1" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="location_id" readonly="1" force_save="1"/>
                                        <field name="to_move" widget="boolean_toggle"/>
                                        <field name="read_line" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Paquetes" name="all_packages">
                                <field name="package_line_ids">
                                    <tree decoration-warning="to_move" decoration-success="read_line" editable="top" duplicate="false" create="false" delete="false">
                                        <field name="package_id" readonly="1" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="location_id" readonly="1" force_save="1"/>
                                        <field name="to_move" invisible="1"/>
                                        <field name="read_line" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>  
                    </group>
                    <footer>
                        <button name="process_audit" type="object" string="Aceptar" class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>

        </field>
    </record>

</odoo>